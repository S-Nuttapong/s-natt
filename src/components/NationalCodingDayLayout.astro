---
import { Icon } from 'astro-icon'

const prev = `${Astro.props.prev}` ?? ''
const next = `${Astro.props.next}` ?? ''
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <div class="w-screen h-screen bg-black flex flex-col justify-between">
      <slot/>
     <div class="flex justify-center">
      <div class="flex gap-2">
        <a href={prev} class="text-white"><Icon name="charm:chevron-left" class="text-gray-500 fill-current w-20 hover:text-gray-50"/></a>
        <a href={next} class="text-white"><Icon name="charm:chevron-right" class="text-gray-500 fill-current w-20 hover:text-gray-50"/></a>
      </div>
     </div>
    </div>
  </body>
</html>