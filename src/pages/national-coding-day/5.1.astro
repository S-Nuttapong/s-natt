---
import lodashSolutionSrc from "../../assets/lodash-solution.webp";
import NationalCodingDayLayout from "../../modules/national-coding-day/NationalCodingDayLayout.astro";
import AstroImage from "../../shared/components/AstroImage.astro";
---

<style is:global>
  pre {
    background: #151718;
    font-size: x-large;
    border-radius: 10px;
    padding: 40px;
  }
  pre > code {
    display: grid;
    row-gap: 10px;
  }
</style>

<NationalCodingDayLayout page={5} title="Fixing 3rd party packages" subTitle="Lodash">
  <div class="flex w-full h-full justify-center items-center">
    <AstroImage
      src={lodashSolutionSrc}
      width={1000}
      height={532}
      alt="lodash-solution"
    />
  </div>
</NationalCodingDayLayout>
